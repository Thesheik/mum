            <%= csrf_meta_tags %>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <h1 class="navbar-brand">mum</h1>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <%= link_to 'sign in', user_session_path %>
                </li>
                <li>
                    <%= link_to 'sign out', destroy_user_session_path, :method => :delete %>
                </li>
            </ul>
        </div>
    </nav>

